<h1>
  #<%=h @channel.name %> (<%= link_to "csv", slug_path(@channel.slug, :format => 'csv') %>)
</h1>

<div id="messages_container">
	<ul id="messages">
	<%= render :partial => 'message', :collection => @channel.messages %>
	</ul>
</div>

<div id="message_form">
	<%= render :partial => 'messages/form' %>
</div>

<h2>Tired of the auto-generated nick?</h2>
<div id="nickname_form">
	<%= render :partial => 'nicknames/form' %>
</div>